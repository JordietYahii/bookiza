# --------- PUSH TO REPO ----------#

push() {
  readValidGitMessage "$MESSAGE"
  git commit -am "${MESSAGE}"
  git push
}


isValidGitMessage() {
  test "$1"
}

readValidGitMessage() {
  MESSAGE=$1
  while ! isValidGitMessage "$MESSAGE"; do
    echo -e "Message: \c"
    read MESSAGE
  done
}

